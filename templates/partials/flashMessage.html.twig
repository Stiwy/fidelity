{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="w-full bg-green-100 border-l-4 border-green-500 text-green-700 p-5 rounded-r-xl shadow-md">{{ flashMessage }}</div>
{% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="mb-2 w-full bg-red-100 border-l-4 border-red-500 text-red-700 p-5 rounded-r-xl shadow-md">{{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('warning') %}
        <div class="mb-2 w-full bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-5 rounded-r-xl shadow-md">{{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('info') %}
        <div class="mb-2 w-full bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-5 rounded-r-xl shadow-md">{{ flashMessage }}</div>
    {% endfor %}